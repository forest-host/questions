{
  "name": "basic",
  "groups": {
    "identity": {
      "recurring": false,
      "questions": {
        "responding_for": {
          "type": "select",
          "required": true,
          "options": [
            "self",
            "somebody_close",
            "somebody_else"
          ]
        },
        "asked_permission": {
          "type": "boolean",
          "variant": "checkbox",
          "required": true,
          "required_answer": true,
          "conditions": [
            {
              "question": "responding_for",
              "not_answer": "self"
            }
          ]
        },
        "takes_precautions": {
          "type": "boolean",
          "variant": "checkbox",
          "required": true,
          "required_answer": true,
          "conditions": [
            {
              "question": "responding_for",
              "not_answer": "self"
            }
          ]
        },
        "location": {
          "type": "coordinates",
          "required": true
        },
        "year_of_birth": {
          "type": "integer",
          "variant": "year",
          "required": true,
          "min": 1900,
          "max": 2020
        },
        "sex": {
          "type": "select",
          "skip": true,
          "other": true,
          "options": [ "male", "female" ]
        }
      }
    },
    "symptoms": {
      "questions": {
        "fever": {
          "type": "boolean",
          "required": true,
          "filter": true
        },
        "fever_degrees": {
          "type": "float",
          "min": 36.0,
          "max": 41.0,
          "variant": "temperature",
          "conditions": [
            {
              "question": "fever",
              "answer": true
            }
          ]
        },
        "dry_cough": {
          "type": "boolean",
          "required": true,
          "filter": true
        },
        "fatigue": {
          "type": "boolean",
          "required": true,
          "filter": true
        },
        "cough_slime": {
          "type": "boolean"
        },
        "short_breath": {
          "type": "boolean"
        },
        "muscle_ache": {
          "type": "boolean"
        },
        "sore_throat": {
          "type": "boolean"
        },
        "headache": {
          "type": "boolean"
        },
        "chills": {
          "type": "boolean"
        },
        "nauseous": {
          "type": "boolean"
        },
        "other_symptoms": {
          "type": "text",
          "variant": "textarea"
        },
        "start_symptoms": {
          "type": "integer",
          "variant": "days",
          "required": false,
          "min": 0,
          "max": 15
        },
        "first_symptom": {
          "type": "multiselect",
          "variant": "checkbox",
          "min_options": 0,
          "max_options": 2,
          "options": [
            "fever",
            "dry_cough",
            "fatigue",
            "cough_slime",
            "short_breath",
            "muscle_ache",
            "sore_throat",
            "headache",
            "chills",
            "nauseous"
          ]
        }
      }
    },
    "social": {
      "recurring": false,
      "questions": {
        "contact_with_positively_tested_person": {
          "type": "boolean"
        },
        "quarantined": {
          "type": "boolean"
        },
        "social_distancing": {
          "type": "select",
          "variant": "radio",
          "skip": true,
          "options": [ "yes", "sometimes", "no" ]
        },
        "home_leaves": {
          "type": "integer"
        },
        "travel_last_weeks": {
          "type": "multiselect",
          "variant": "country"
        },
        "email": {
          "type": "email",
          "required": true
        },
        "terms_and_conditions": {
          "type": "boolean",
          "variant": "checkbox",
          "required": true,
          "required_answer": true
        }
      }
    }
  }
}
